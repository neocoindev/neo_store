# NOTE: CHANGE THE FILE NAME FROM .env_template to .env
# Copy this file to .env and fill in your values

# ============================================
# Django Core Settings
# ============================================
SECRET_KEY=your-very-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# ============================================
# Database Configuration
# ============================================
DB_NAME=neostore_db
DB_USER=neostore_user
DB_PASSWORD=strong-password-here
DB_HOST=db
DB_PORT=5432

# ============================================
# Django Superuser (Optional - for auto-creation)
# ============================================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=secure-password-here

# ============================================
# Gunicorn Workers
# ============================================
GUNICORN_WORKERS=3

# ============================================
# Stripe Payment Gateway
# https://docs.stripe.com/keys
# ============================================
STRIPE_PUBLIC_KEY=<env-key>
STRIPE_SECRET_KEY=<env-key>

# ============================================
# PayPal Payment Gateway
# https://www.upwork.com/resources/paypal-client-id-secret-key
# https://www.appinvoice.com/en/s/documentation/how-to-get-paypal-client-id-and-secret-key-22
# ============================================
PAYPAL_CLIENT_ID=<env-key>
PAYPAL_SECRET_ID=<env-key>

# ============================================
# Flutterwave Payment Gateway
# https://flutterwave.com/mu/support/my-account/getting-your-api-keys
# ============================================
FLUTTERWAVE_PUBLIC_KEY=<env-key>
FLUTTERWAVE_PRIVATE_KEY=<env-key>

# ============================================
# Paystack Payment Gateway
# https://support.paystack.com/hc/en-us/articles/360011508199-How-do-I-generate-new-API-keys
# ============================================
PAYSTACK_PUBLIC_KEY=<env-key>
PAYSTACK_PRIVATE_KEY=<env-key>

# ============================================
# Razorpay Payment Gateway
# https://razorpay.com/docs/payments/dashboard/account-settings/api-keys/
# ============================================
RAZORPAY_KEY_ID=<env-key>
RAZORPAY_KEY_SECRET=<env-key>

# ============================================
# Mailgun Email Service
# https://help.mailgun.com/hc/en-us/articles/203380100-Where-can-I-find-my-API-keys-and-SMTP-credentials
# https://docs.gravityforms.com/mailgun-api-key/
# https://app.mailgun.com/settings/api_security
# ============================================
MAILGUN_API_KEY=<env-key>
MAILGUN_SENDER_DOMAIN=<env-key>

# Enter your verified mailgun emails here
FROM_EMAIL=<env-key>
EMAIL_BACKEND=anymail.backends.mailgun.EmailBackend
DEFAULT_FROM_EMAIL=<env-key>
SERVER_EMAIL=<env-key>

# ============================================
# Google reCAPTCHA
# https://cloud.google.com/recaptcha/docs/create-key-website
# ============================================
DJANGO_RECAPTCHA_PUBLIC_KEY=<env-key>
DJANGO_RECAPTCHA_PRIVATE_KEY=<env-key>
